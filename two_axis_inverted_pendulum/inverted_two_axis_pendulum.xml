<mujoco model="inverted two-axis pendulum">
  <compiler inertiafromgeom="true"/>
  <default>
    <joint armature="0" damping="1" limited="true"/>
    <geom contype="0" friction="1 0.1 0.1" rgba="0.4 0.33 0.26 1.0"/>
    <tendon/>
    <motor ctrlrange="-3 3"/>
  </default>
  <option gravity="0 0 -9.81" timestep="0.02" />
  <custom>
    <!-- brax custom params, I have no idea what to do with these....-->
    <numeric data="10000" name="constraint_stiffness"/>
    <numeric data="10000" name="constraint_limit_stiffness"/>
    <numeric data="0" name="spring_mass_scale"/>
    <numeric data="1" name="spring_inertia_scale"/>
    <numeric data="5" name="solver_maxls"/>
  </custom>
  <size nstack="3000"/>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.8 0.8 0.8" rgb2="0 0 0" width="512" height="3072"/>
    <texture name="floor_tex" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 .2 .3" width="100" height="100" />
    <material name="floor_material" texture="floor_tex" texuniform="true" />
  </asset>

  <worldbody>
    <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.2" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
    <geom conaffinity="1" condim="3" material="floor_material" name="floor" pos="0 0 -0.50" size="40 40 40" type="plane" rgba="0.5 0.5 0.5 1.0"/>    
    <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>

    <geom pos="0 1 0" quat="0.707 0 0.707 0" size="0.02 1" type="capsule" rgba="1 1 1 1"/> 
    <geom pos="0 -1 0" quat="0.707 0 0.707 0" size="0.02 1" type="capsule" rgba="1 1 1 1"/> 
    <geom pos="1 0 0" quat="0.707 0.707 0 0" size="0.02 1" type="capsule" rgba="1 1 1 1"/>
    <geom pos="-1 0 0" quat="0.707 0.707 0 0" size="0.02 1" type="capsule" rgba="1 1 1 1"/>



    <body name="cart" pos="0 0 0">
      <joint axis="1 0 0" limited="true" name="x_slider" pos="0 0 0" range="-1 1" type="slide"/>
      <joint axis="0 1 0" limited="true" name="y_slider" pos="0 0 0" range="-1 1" type="slide"/>
      <geom name="cart" pos="0 0 0" quat="0.707 0 0.707 0" size="0.1 0.1" type="capsule"/>

      <body name="pole" pos="0 0 0">
        <joint axis="0 1 0" limited="false" name="hinge_x" pos="0 0 0" type="hinge"/>
        <joint axis="1 0 0" limited="false" name="hinge_y" pos="0 0 0" type="hinge"/>
        <geom fromto="0 0 0 0 0 0.6" name="pole"  size="0.045" type="capsule"/>
      </body>
    </body>
  </worldbody>
  
  <actuator>
    <motor ctrllimited="true" ctrlrange="-3 3" gear="100" joint="x_slider" name="x_slide"/>
    <motor ctrllimited="true" ctrlrange="-3 3" gear="100" joint="y_slider" name="y_slide"/>
  </actuator>
</mujoco>
