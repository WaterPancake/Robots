<mujoco>
 <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.8 0.8 0.8" rgb2="0 0 0" width="512" height="3072"/>
    <texture name="floor_tex" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 .2 .3" width="100" height="100" />
    <material name="floor_material" texture="floor_tex" texuniform="true" />
  </asset>

  <worldbody>
    <camera name="profile" pos ="12 0 0" xyaxes="0 65 0 0.2 0 1"/>

    <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.2" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
    <geom conaffinity="1" condim="3" material="floor_material" name="floor" pos="0 0 -0.5" size="40 40 40" type="plane" rgba="0.5 0.5 0.5 1.0"/>        <!-- 0 -->

    <body name="base">
        <joint type="free" name="free"/>
  
        <geom name="upper" type="box" size="0.1 0.1 4" quat="0  0.707107 0 0" pos="0 0 4.1" mass="8"/>                                                  <!-- 1 -->
        <geom name="lower" type="box" size="0.1 0.1 1" quat="0.707107 0 0.707107 0" pos="0 0 0" mass="4"/>                                          <!-- 2 -->


        <body name="top">
          <geom name="top" type="sphere" size="0.1 0.1" mass="1e-5" pos="0 0 8"/>                                                                                        <!-- 3 -->
        </body>

        <body name="right_wheel" pos="1.15 0 0.05">
          <geom name="right_wheel" type="cylinder" size="0.4125 0.125" quat="0 0.707107 0 0.707107" mass="26.5"/>                                <!-- 4 -->
          <joint name="right_wheel" type="hinge" axis="-1 0 0"/>
        </body>

        <body name="left_wheel" pos="-1.15 0 0.05">
          <geom name="left_wheel" type="cylinder" size="0.4125 0.125" quat="0 0.707107 0 0.707107" mass="26.5"/>                                   <!-- 5 -->
          <joint name="left_wheel" type="hinge" axis="-1 0 0"/>
        </body>

    </body>
  </worldbody>
  <actuator>
    <motor gear="300" joint="left_wheel" name="left_wheel" ctrlrange="-1 1"/>
    <motor gear="300" joint="right_wheel" name="right_wheel" ctrlrange="-1 1"/>
  </actuator>j

</mujoco>