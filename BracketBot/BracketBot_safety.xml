<mujoco>
 <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.8 0.8 0.8" rgb2="0 0 0" width="512" height="3072"/>
    <texture name="floor_tex" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 .2 .3" width="100" height="100" />
    <material name="floor_material" texture="floor_tex" texuniform="true" />
  </asset>

  <worldbody>
    <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.2" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
    <geom conaffinity="1" condim="3" material="floor_material" name="floor" pos="0 0 -0.50" size="40 40 40" type="plane" rgba="0.5 0.5 0.5 1.0"/>    
    <!-- <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/> -->


    <body name="base">
        <joint type="free"/>
        <body name="lower">
            <geom type="box" size="0.1 0.1 1" quat="0.707107 0 0.707107 0" mass="2000"/>

            <body name="upper" pos="0 0 4.1">
                <!-- <joint name="pole_angle" pos="0 0 -4" type="hinge" axis="1 0 0" damping="1000" stiffness="1000" range="-10.1"/> -->
                <geom type="box" size="0.1 0.1 4" quat="0  0.707107 0 0"/>
            </body>

            <body name="right_wheel" pos="1.15 0 0.05">
                <geom type="cylinder" size="0.4125 0.125" quat="0 0.707107 0 0.707107"/>
                <joint name="right_wheel" type="hinge" axis="-1 0 0"/>
            </body>

            <body name="left_wheel" pos="-1.15 0 0.05">
                <geom type="cylinder" size="0.4125 0.125" quat="0 0.707107 0 0.707107"/>
                <joint name="left_wheel" type="hinge" axis="-1 0 0"/>
            </body>

            <!-- Balance Beams? -->
            <body pos="0.75 0 0">
                <geom type="cylinder" size="0.1 0.7" quat="0.707107 0.707107 0 0" mass="1e-5"/>
            </body>

            <body pos="-0.75 0 0">
                <geom type="cylinder" size="0.1 0.7" quat="0.707107 0.707107 0 0" mass="1e-5"/>
            </body>
        </body>
    </body>
  </worldbody>
  <actuator>
  </actuator>
</mujoco>